<div class="form-container">
  <h2>Edit Book</h2>

  <%= form_with model: [@challenge, @book], local: true do |f| %>
    <% if @book.errors.any? %>
      <div class="error-messages">
        <h3><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :author %>
      <%= f.text_field :author, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :pages %>
      <%= f.number_field :pages, required: true, class: "form-control", min: 1 %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 4, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :url, "Book URL (Amazon, Goodreads, etc.)" %>
      <%= f.url_field :url, placeholder: "https://...", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :completion_date, "Completion Date" %>
      <%= f.date_field :completion_date, class: "form-control", max: Date.today %>
      <small class="form-text">Leave blank if you haven't finished the book yet</small>
    </div>

    <div class="form-actions">
      <%= f.submit "Update Book", class: "btn btn-primary" %>
      <%= link_to "Cancel", challenge_book_path(@challenge, @book), class: "btn" %>
    </div>
  <% end %>
</div>
