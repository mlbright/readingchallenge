<div class="form-container">
  <h2>Add a New Book to <%= @challenge.name %></h2>
  <p class="form-subtitle">Track your reading progress in this challenge</p>

  <%= form_with model: [@challenge, @book], local: true do |f| %>
    <% if @book.errors.any? %>
      <div class="error-messages">
        <h3><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, required: true, class: "form-control", placeholder: "Enter the book title" %>
    </div>

    <div class="form-group">
      <%= f.label :author %>
      <%= f.text_field :author, required: true, class: "form-control", placeholder: "Enter the author name" %>
    </div>

    <div class="form-group">
      <%= f.label :pages %>
      <%= f.number_field :pages, required: true, class: "form-control", min: 1 %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 4, class: "form-control", placeholder: "Optional description or notes about this book" %>
    </div>

    <div class="form-group">
      <%= f.label :url, "Book URL (Amazon, Goodreads, etc.)" %>
      <%= f.url_field :url, placeholder: "https://...", class: "form-control" %>
      <small class="form-text">Optional - link to where others can find this book</small>
    </div>

    <div class="form-group">
      <%= f.label :completion_date, "Completion Date" %>
      <%= f.date_field :completion_date, class: "form-control", max: Date.today %>
      <small class="form-text">Leave blank if you haven't finished yet - you can update this later</small>
    </div>

    <div class="form-actions">
      <%= f.submit "Add Book", class: "btn btn-primary" %>
      <%= link_to "Cancel", @challenge, class: "btn" %>
    </div>
  <% end %>
</div>
