<div class="password-setup">
  <h1>📚 Activate Your Account</h1>
  <p class="form-subtitle">Your administrator has created an account for you. Enter your email and create a password to get started.</p>
  
  <div class="alert alert-info">
    <strong>ℹ️ Note:</strong> Your account must be created by a site administrator before you can sign up. 
    If you don't have an account yet, please contact your administrator.
  </div>
  
  <%= form_with url: create_signup_path, method: :post, local: true do |f| %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, required: true, class: "form-control", placeholder: "your.email@example.com", autofocus: true %>
      <small class="form-text">Use the email address provided by your administrator</small>
    </div>

    <div class="password-requirements">
      <h3>Create Your Password:</h3>
      <p>Your password must meet these requirements:</p>
      <ul>
        <li>Minimum 12 characters</li>
        <li>At least one lowercase letter (a-z)</li>
        <li>At least one uppercase letter (A-Z)</li>
        <li>At least one digit (0-9)</li>
        <li>At least one special character (!@#$%^&*()_+-=[]{}|;:,.<>?)</li>
      </ul>
    </div>

    <div class="form-group">
      <%= label_tag :password, "Create Password" %>
      <%= password_field_tag :password, nil, required: true, class: "form-control", minlength: 12 %>
    </div>

    <div class="form-group">
      <%= label_tag :password_confirmation, "Confirm Password" %>
      <%= password_field_tag :password_confirmation, nil, required: true, class: "form-control", minlength: 12 %>
    </div>

    <div class="form-actions">
      <%= submit_tag "Activate Account", class: "btn btn-primary" %>
      <%= link_to "Back to Login", login_path, class: "btn" %>
    </div>
  <% end %>
  
  <div style="margin-top: 2rem; text-align: center;">
    <p class="text-muted">Already activated? <%= link_to "Login here", login_path %></p>
  </div>
</div>
