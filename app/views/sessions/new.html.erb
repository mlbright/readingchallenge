<h2>Login</h2>

<%= form_with url: login_path, local: true do |f| %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, required: true, class: "form-control", placeholder: "your.email@example.com" %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, required: true, class: "form-control" %>
  </div>

  <%= submit_tag "Log In", class: "btn btn-primary" %>
<% end %>

<div style="margin-top: 2rem;">
  <p>Need to activate your account? <%= link_to "Activate here", activation_path %></p>
  <% unless User.exists?(admin: true) %>
    <p class="text-muted">First time here? <%= link_to "Set up as Site Administrator", admin_signup_path %></p>
  <% end %>
</div>
