<div class="form-container">
  <h1>Edit Challenge</h1>
  <p class="form-subtitle">Update your challenge details</p>

  <%= form_with model: @challenge, local: true do |f| %>
    <% if @challenge.errors.any? %>
      <div class="error-messages">
        <h3><%= pluralize(@challenge.errors.count, "error") %> prohibited this challenge from being saved:</h3>
        <ul>
          <% @challenge.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, required: true, class: "form-control", maxlength: 100 %>
      <small class="form-text">Challenge name (3-100 characters)</small>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 4, class: "form-control" %>
      <small class="form-text">Optional description</small>
    </div>

    <div class="form-group">
      <%= f.label :due_date, "End Date" %>
      <%= f.date_field :due_date, required: true, class: "form-control", min: Date.today %>
      <small class="form-text">Challenge end date</small>
    </div>

    <div class="form-group">
      <%= f.label :veto_threshold, "Veto Threshold" %>
      <%= f.number_field :veto_threshold, required: true, class: "form-control", min: 1 %>
      <small class="form-text">Number of vetos needed to disqualify a book from leaderboard</small>
    </div>
    
    <div class="form-group">
      <%= f.label :default_book_goal, "Default Book Goal" %>
      <%= f.number_field :default_book_goal, required: true, class: "form-control", min: 1 %>
      <small class="form-text">Default number of books for new participants (existing participants keep their current goals)</small>
    </div>

    <div class="form-actions">
      <%= f.submit "Update Challenge", class: "btn btn-primary" %>
      <%= link_to "Cancel", @challenge, class: "btn" %>
    </div>
  <% end %>
</div>
